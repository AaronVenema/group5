<div class="d-flex min-vh-100 bg-info  p-3">
  <div class="container-fluid my-auto text-center">
        <h2 class="display-4 font-weight-bold">Sign Up</h2>
        <form class="form signup-form col col-md">
            <div class="form-signup p-2">
                <label for="name-input"></label>
                <input  type="text" placeholder="Name" id="name"/>
            </div>
            <div class="form-signup p-2">
                <label for="username-input"></label>
                <input  type="email" placeholder="Email" id="email"/>
            </div>
            <div class="form-signup p-2">
                <label for="password-input"></label>
                <input  type="password" placeholder="Password" id="password"/>
            </div>
            <div class="form-group p-3">
                <button class="btn btn-dark rounded-pill" type="submit">Sign Up</button>
          </div>
        </form>
    </div>
</div>

<script src="./js/signup.js"></script>